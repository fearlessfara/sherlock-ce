# AWS Credentials
# Copy this file to .env and fill in your AWS credentials

# Option 1: Access Key and Secret Key
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=eu-west-1

# Option 2: Session Token (for temporary credentials)
# AWS_SESSION_TOKEN=your_session_token_here

# Option 3: Profile (if using AWS CLI profiles)
# AWS_PROFILE=your_profile_name

# Bedrock Model Configuration
BEDROCK_MODEL_ID=openai.gpt-oss-120b-1:0
SHERLOCK_TEMPERATURE=0.7
SHERLOCK_MAX_TOKENS=

# Memory System Configuration (OpenSearch)
SHERLOCK_MEMORY_ENABLED=true
SHERLOCK_MEMORY_ENDPOINT=http://opensearch:9200
SHERLOCK_MEMORY_AUTH_TYPE=api_key
SHERLOCK_MEMORY_API_KEY=
SHERLOCK_MEMORY_MAX_RESULTS=5
SHERLOCK_MEMORY_MIN_QUALITY=0.7
SHERLOCK_MEMORY_TIMEOUT_MS=2000

# Note: When deployed to AWS Lambda, AWS credentials are automatically
# provided via the Lambda execution role. No environment variables needed.
